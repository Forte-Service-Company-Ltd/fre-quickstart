{
  "Policy": "Test Policy",
  "Description": "This policy is designed to test the transfer function with a value greater than 10000.",
  "PolicyType": "open",
  "CallingFunctions": [
    {
      "name": "transfer(address to, uint256 value)",
      "functionSignature": "transfer(address to, uint256 value)",
      "encodedValues": "address to, uint256 value, string tag"
    }
  ],
  "ForeignCalls": [],
  "Trackers": [
    {
      "name": "trackerOne",
      "type": "uint256",
      "initialValue": "0"
    },
    {
      "name": "lastReset",
      "type": "uint256",
      "initialValue": "0"
    }
  ],
  "MappedTrackers": [],
  "Rules": [
    {
      "Name": "washTrading",
      "Description": "Reset volume every 46 seconds",
      "condition": "GV:BLOCK_TIMESTAMP - TR:lastReset > 45",
      "positiveEffects": ["emit \"TransferSuccessful\" ", "TRU:lastReset = GV:BLOCK_TIMESTAMP", "TRU:trackerOne = 0"],
      "negativeEffects": [],
      "callingFunction": "transfer(address to, uint256 value)"
    },
    {
      "Name": "tradingVolume",
      "Description": "Revert if volume has gone above 5000",
      "condition": "TR:trackerOne < 5000",
      "positiveEffects": ["emit \"TransferSuccessful\" ", "TRU:trackerOne += value"],
      "negativeEffects": ["revert(\"Max Volume\")"],
      "callingFunction": "transfer(address to, uint256 value)"
    }
  ]
}
